<%= render 'components/banner', url: "#{@list.photo.key}", class: "position-relative" %>
<div class="container bg-white rounded-4 p-4 position-absolute top-50 start-50 translate-middle-x">
  <div class="row">
  <h1 class="text-center"><%= @list.name %></h1>
      <% @list.movies.each do |movie| %>
        <div class="col-sm-4 rounded-4 border">
        <img src="<%= movie.poster_url %>" class="movie_poster obj-fit rounded-bottom rounded-4">
        <div class="p-3">
          <h4><strong><%= movie.title %></strong> | <%= movie.rating %>‚≠ê</h4>
          <p><%= movie.overview %></p>
          <p><%=  %></p>
        </div>
        </div>
      <% end %>
  </div>
  <div class="row mt-5">
  <h2 class="text-center">Create Bookmark</h2>
    <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :movie, collection:  @movies %>
    <%= f.input :comment %>
    <%= f.submit class:"btn btn-success" %><%= link_to 'Back', lists_path, class: "ms-2 btn btn-outline-primary" %>
    <% end %>
  </div>
</div>