<%= render 'components/banner', url: "lvaijmqkmfql37mh0zvj", class: "position-relative" %>
<div class="container bg-white rounded-4 p-4 position-absolute top-50 start-50 translate-middle-x">
  <div class="row">
    <% counter = 0 %>
    <% @lists.each do |list| %>
    <div class="col-sm-3 text-center my-2">
      <div class="card card-height border-0">
        <%= image_tag "movie_#{counter += 1}.jpeg", height: "100%", class: "card-img obj-fit rounded-4" %>
          <div class="card-img-overlay d-flex align-items-center justify-content-center overlay-bg rounded-4">
            <%= link_to list.name, list_path(list), class: "fs-3 fw-bold text-decoration-none text-white" %>
          </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
